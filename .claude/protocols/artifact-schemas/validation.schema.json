{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "validation-artifact-v1",
  "title": "Validation Artifact",
  "description": "Schema for validation results produced by the validation agent",
  "type": "object",
  
  "required": [
    "$schema",
    "workflow_id",
    "created_at",
    "agent",
    "version",
    "summary",
    "tests",
    "linting",
    "type_checking",
    "quality_gates",
    "metadata"
  ],
  
  "properties": {
    "$schema": {
      "type": "string",
      "const": "validation-artifact-v1"
    },
    
    "workflow_id": {
      "type": "string",
      "pattern": "^wf_\\d{8}_\\d{6}$"
    },
    
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    
    "agent": {
      "type": "string",
      "const": "validation"
    },
    
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    
    "summary": {
      "type": "object",
      "required": [
        "overall_status",
        "tests_passed",
        "tests_failed",
        "coverage_percentage"
      ],
      "properties": {
        "overall_status": {
          "type": "string",
          "enum": ["passed", "failed", "passed_with_warnings"]
        },
        "tests_passed": {
          "type": "integer",
          "minimum": 0
        },
        "tests_failed": {
          "type": "integer",
          "minimum": 0
        },
        "tests_skipped": {
          "type": "integer",
          "minimum": 0
        },
        "coverage_percentage": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "lint_errors": {
          "type": "integer",
          "minimum": 0
        },
        "lint_warnings": {
          "type": "integer",
          "minimum": 0
        },
        "type_errors": {
          "type": "integer",
          "minimum": 0
        },
        "security_issues": {
          "type": "integer",
          "minimum": 0
        },
        "requirements_coverage": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    },
    
    "tests": {
      "type": "object",
      "required": ["framework", "total", "passed", "failed"],
      "properties": {
        "framework": {
          "type": "string",
          "enum": ["pytest", "jest", "vitest", "mocha", "unittest"]
        },
        "total": {
          "type": "integer",
          "minimum": 0
        },
        "passed": {
          "type": "integer",
          "minimum": 0
        },
        "failed": {
          "type": "integer",
          "minimum": 0
        },
        "skipped": {
          "type": "integer",
          "minimum": 0
        },
        "errors": {
          "type": "integer",
          "minimum": 0
        },
        "duration_seconds": {
          "type": "number",
          "minimum": 0
        },
        "results": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["file", "tests", "passed", "failed"],
            "properties": {
              "file": { "type": "string" },
              "tests": { "type": "integer" },
              "passed": { "type": "integer" },
              "failed": { "type": "integer" },
              "duration": { "type": "number" }
            }
          }
        },
        "failures": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["test", "file", "error"],
            "properties": {
              "test": { "type": "string" },
              "file": { "type": "string" },
              "line": { "type": "integer" },
              "error": { "type": "string" },
              "traceback": { "type": "string" },
              "related_source": { "type": "string" }
            }
          }
        },
        "coverage": {
          "type": "object",
          "properties": {
            "total_percentage": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            "by_file": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["file", "lines", "covered", "percentage"],
                "properties": {
                  "file": { "type": "string" },
                  "lines": { "type": "integer" },
                  "covered": { "type": "integer" },
                  "percentage": { "type": "number" }
                }
              }
            },
            "uncovered_lines": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["file", "lines"],
                "properties": {
                  "file": { "type": "string" },
                  "lines": {
                    "type": "array",
                    "items": { "type": "integer" }
                  }
                }
              }
            }
          }
        }
      }
    },
    
    "linting": {
      "type": "object",
      "required": ["tool", "status"],
      "properties": {
        "tool": {
          "type": "string",
          "enum": ["ruff", "eslint", "flake8", "pylint", "prettier"]
        },
        "status": {
          "type": "string",
          "enum": ["passed", "failed"]
        },
        "errors": {
          "type": "integer",
          "minimum": 0
        },
        "warnings": {
          "type": "integer",
          "minimum": 0
        },
        "issues": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["file", "line", "code", "severity", "message"],
            "properties": {
              "file": { "type": "string" },
              "line": { "type": "integer" },
              "column": { "type": "integer" },
              "code": { "type": "string" },
              "severity": {
                "type": "string",
                "enum": ["error", "warning", "info"]
              },
              "message": { "type": "string" },
              "fix_available": { "type": "boolean" }
            }
          }
        }
      }
    },
    
    "type_checking": {
      "type": "object",
      "required": ["tool", "status"],
      "properties": {
        "tool": {
          "type": "string",
          "enum": ["mypy", "pyright", "tsc", "typescript"]
        },
        "status": {
          "type": "string",
          "enum": ["passed", "failed"]
        },
        "errors": {
          "type": "integer",
          "minimum": 0
        },
        "issues": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["file", "line", "code", "message"],
            "properties": {
              "file": { "type": "string" },
              "line": { "type": "integer" },
              "column": { "type": "integer" },
              "code": { "type": "string" },
              "message": { "type": "string" },
              "suggestion": { "type": "string" }
            }
          }
        }
      }
    },
    
    "security": {
      "type": "object",
      "properties": {
        "tool": {
          "type": "string",
          "enum": ["bandit", "npm-audit", "safety", "snyk"]
        },
        "status": {
          "type": "string",
          "enum": ["passed", "failed"]
        },
        "high": {
          "type": "integer",
          "minimum": 0
        },
        "medium": {
          "type": "integer",
          "minimum": 0
        },
        "low": {
          "type": "integer",
          "minimum": 0
        },
        "issues": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["severity", "description"],
            "properties": {
              "file": { "type": "string" },
              "line": { "type": "integer" },
              "severity": {
                "type": "string",
                "enum": ["high", "medium", "low"]
              },
              "cwe": { "type": "string" },
              "description": { "type": "string" },
              "recommendation": { "type": "string" }
            }
          }
        }
      }
    },
    
    "requirements_verification": {
      "type": "object",
      "properties": {
        "total_requirements": {
          "type": "integer",
          "minimum": 0
        },
        "verified": {
          "type": "integer",
          "minimum": 0
        },
        "unverified": {
          "type": "integer",
          "minimum": 0
        },
        "coverage": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "details": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["requirement_id", "description", "status"],
            "properties": {
              "requirement_id": {
                "type": "string",
                "pattern": "^FR-\\d{3}$"
              },
              "description": { "type": "string" },
              "status": {
                "type": "string",
                "enum": ["verified", "partially_verified", "unverified", "not_applicable"]
              },
              "evidence": {
                "type": "object",
                "properties": {
                  "implementation": { "type": "string" },
                  "tests": {
                    "type": "array",
                    "items": { "type": "string" }
                  },
                  "criteria_met": {
                    "type": "array",
                    "items": { "type": "string" }
                  },
                  "criteria_unmet": {
                    "type": "array",
                    "items": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    
    "quality_gates": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["required", "status", "threshold", "actual"],
        "properties": {
          "required": { "type": "boolean" },
          "status": {
            "type": "string",
            "enum": ["passed", "failed", "skipped"]
          },
          "threshold": { "type": "string" },
          "actual": { "type": "string" }
        }
      }
    },
    
    "recommendations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["severity", "category", "message"],
        "properties": {
          "severity": {
            "type": "string",
            "enum": ["critical", "warning", "info"]
          },
          "category": {
            "type": "string",
            "enum": ["coverage", "security", "performance", "maintainability", "testing"]
          },
          "message": { "type": "string" },
          "file": { "type": "string" },
          "lines": {
            "type": "array",
            "items": { "type": "integer" }
          }
        }
      }
    },
    
    "retry_required": {
      "type": "boolean",
      "description": "Whether validation failures require retry"
    },
    
    "retry_targets": {
      "type": "array",
      "description": "Agents that need to retry",
      "items": {
        "type": "object",
        "required": ["agent", "reason"],
        "properties": {
          "agent": { "type": "string" },
          "reason": { "type": "string" },
          "failing_tests": {
            "type": "array",
            "items": { "type": "string" }
          },
          "related_files": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    
    "metadata": {
      "type": "object",
      "required": ["validation_duration_ms", "tokens_used"],
      "properties": {
        "validation_duration_ms": {
          "type": "integer",
          "minimum": 0
        },
        "tokens_used": {
          "type": "integer",
          "minimum": 0
        },
        "environment": {
          "type": "object",
          "properties": {
            "python_version": { "type": "string" },
            "node_version": { "type": "string" },
            "os": { "type": "string" }
          }
        }
      }
    }
  }
}
