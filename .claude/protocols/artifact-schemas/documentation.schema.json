{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "documentation-artifact-v1",
  "title": "Documentation Artifact",
  "description": "Schema for documentation artifacts produced by the documentation agent",
  "type": "object",
  
  "required": [
    "$schema",
    "workflow_id",
    "created_at",
    "agent",
    "version",
    "generated_files",
    "metadata"
  ],
  
  "properties": {
    "$schema": {
      "type": "string",
      "const": "documentation-artifact-v1"
    },
    
    "workflow_id": {
      "type": "string",
      "pattern": "^wf_\\d{8}_\\d{6}$"
    },
    
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    
    "agent": {
      "type": "string",
      "const": "documentation"
    },
    
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    
    "generated_files": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "type", "content", "description"],
        "properties": {
          "path": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "feature_documentation",
              "api_documentation",
              "usage_example",
              "architecture_decision",
              "migration_guide",
              "readme",
              "changelog"
            ]
          },
          "content": {
            "type": "string"
          },
          "description": {
            "type": "string",
            "maxLength": 200
          },
          "format": {
            "type": "string",
            "enum": ["markdown", "restructuredtext", "html", "openapi"]
          },
          "line_count": {
            "type": "integer",
            "minimum": 1
          }
        }
      }
    },
    
    "modified_files": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "type", "action"],
        "properties": {
          "path": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["readme_update", "changelog_update", "api_docs_update"]
          },
          "section": {
            "type": "string",
            "description": "Section being modified"
          },
          "action": {
            "type": "string",
            "enum": ["append_section", "prepend_to_section", "replace_section", "insert_after"]
          },
          "content": {
            "type": "string"
          }
        }
      }
    },
    
    "api_documentation": {
      "type": "object",
      "description": "Structured API documentation",
      "properties": {
        "title": { "type": "string" },
        "version": { "type": "string" },
        "base_url": { "type": "string" },
        "authentication": {
          "type": "object",
          "properties": {
            "type": { "type": "string" },
            "description": { "type": "string" }
          }
        },
        "endpoints": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["method", "path", "summary"],
            "properties": {
              "method": {
                "type": "string",
                "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"]
              },
              "path": { "type": "string" },
              "summary": { "type": "string" },
              "description": { "type": "string" },
              "request": {
                "type": "object",
                "properties": {
                  "content_type": { "type": "string" },
                  "body_schema": { "type": "object" },
                  "example": { "type": "object" }
                }
              },
              "responses": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["status", "description"],
                  "properties": {
                    "status": { "type": "integer" },
                    "description": { "type": "string" },
                    "schema": { "type": "object" },
                    "example": { "type": "object" }
                  }
                }
              },
              "auth_required": { "type": "boolean" },
              "curl_example": { "type": "string" }
            }
          }
        }
      }
    },
    
    "usage_examples": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["title", "language", "code"],
        "properties": {
          "title": { "type": "string" },
          "description": { "type": "string" },
          "language": {
            "type": "string",
            "enum": ["python", "javascript", "typescript", "bash", "curl"]
          },
          "code": { "type": "string" },
          "file": { "type": "string" }
        }
      }
    },
    
    "architecture_decisions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "status", "decision"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^ADR-\\d{3}$"
          },
          "title": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["proposed", "accepted", "deprecated", "superseded"]
          },
          "context": { "type": "string" },
          "decision": { "type": "string" },
          "consequences": {
            "type": "object",
            "properties": {
              "positive": {
                "type": "array",
                "items": { "type": "string" }
              },
              "negative": {
                "type": "array",
                "items": { "type": "string" }
              },
              "mitigations": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          },
          "file": { "type": "string" }
        }
      }
    },
    
    "changelog_entries": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["category", "description"],
        "properties": {
          "version": { "type": "string" },
          "category": {
            "type": "string",
            "enum": ["Added", "Changed", "Deprecated", "Removed", "Fixed", "Security"]
          },
          "description": { "type": "string" }
        }
      }
    },
    
    "configuration_docs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["variable", "description"],
        "properties": {
          "variable": { "type": "string" },
          "description": { "type": "string" },
          "type": { "type": "string" },
          "default": { "type": "string" },
          "required": { "type": "boolean" },
          "example": { "type": "string" }
        }
      }
    },
    
    "metadata": {
      "type": "object",
      "required": ["total_docs", "tokens_used"],
      "properties": {
        "total_docs": {
          "type": "integer",
          "minimum": 0
        },
        "modified_files": {
          "type": "integer",
          "minimum": 0
        },
        "total_lines": {
          "type": "integer",
          "minimum": 0
        },
        "tokens_used": {
          "type": "integer",
          "minimum": 0
        },
        "generation_duration_ms": {
          "type": "integer",
          "minimum": 0
        }
      }
    }
  }
}
