{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "test-artifact-v1",
  "title": "Test Artifact",
  "description": "Schema for test artifacts produced by the test-generation agent",
  "type": "object",
  
  "required": [
    "$schema",
    "workflow_id",
    "created_at",
    "agent",
    "version",
    "generated_files",
    "metadata"
  ],
  
  "properties": {
    "$schema": {
      "type": "string",
      "const": "test-artifact-v1"
    },
    
    "workflow_id": {
      "type": "string",
      "pattern": "^wf_\\d{8}_\\d{6}$"
    },
    
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    
    "agent": {
      "type": "string",
      "const": "test-generation"
    },
    
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    
    "generated_files": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["path", "test_count", "content", "description"],
        "properties": {
          "path": {
            "type": "string",
            "description": "Relative file path from project root"
          },
          "test_count": {
            "type": "integer",
            "minimum": 0,
            "description": "Number of test cases in file"
          },
          "content": {
            "type": "string",
            "description": "Full file content"
          },
          "description": {
            "type": "string",
            "maxLength": 200
          },
          "line_count": {
            "type": "integer",
            "minimum": 1
          },
          "test_type": {
            "type": "string",
            "enum": ["unit", "integration", "api", "e2e", "fixture", "conftest"]
          },
          "covers": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Source files this test file covers"
          }
        }
      }
    },
    
    "test_suites": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "file", "test_cases"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Test class/suite name"
          },
          "file": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "test_cases": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "type"],
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Test function name"
                },
                "type": {
                  "type": "string",
                  "enum": ["happy_path", "error_case", "edge_case", "security", "performance"]
                },
                "description": {
                  "type": "string"
                },
                "covers_requirement": {
                  "type": "string",
                  "pattern": "^FR-\\d{3}$"
                },
                "covers_method": {
                  "type": "string",
                  "description": "Method being tested"
                }
              }
            }
          }
        }
      }
    },
    
    "coverage_mapping": {
      "type": "object",
      "description": "Map of source files to their tests",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "tests": {
            "type": "array",
            "items": { "type": "string" }
          },
          "methods_tested": {
            "type": "array",
            "items": { "type": "string" }
          },
          "methods_untested": {
            "type": "array",
            "items": { "type": "string" }
          },
          "estimated_coverage": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        }
      }
    },
    
    "fixtures": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "file"],
        "properties": {
          "name": {
            "type": "string"
          },
          "file": {
            "type": "string"
          },
          "scope": {
            "type": "string",
            "enum": ["function", "class", "module", "session"]
          },
          "description": {
            "type": "string"
          },
          "dependencies": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    
    "mocks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["target", "used_in"],
        "properties": {
          "target": {
            "type": "string",
            "description": "What is being mocked"
          },
          "mock_type": {
            "type": "string",
            "enum": ["mock", "patch", "spy", "stub", "fake"]
          },
          "used_in": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    
    "test_categories": {
      "type": "object",
      "properties": {
        "unit": {
          "type": "integer",
          "minimum": 0
        },
        "integration": {
          "type": "integer",
          "minimum": 0
        },
        "api": {
          "type": "integer",
          "minimum": 0
        },
        "e2e": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    
    "requirements_coverage": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["requirement_id", "tests"],
        "properties": {
          "requirement_id": {
            "type": "string",
            "pattern": "^FR-\\d{3}$"
          },
          "tests": {
            "type": "array",
            "items": { "type": "string" }
          },
          "coverage_status": {
            "type": "string",
            "enum": ["covered", "partially_covered", "not_covered"]
          }
        }
      }
    },
    
    "metadata": {
      "type": "object",
      "required": ["framework", "total_tests", "total_files", "tokens_used"],
      "properties": {
        "framework": {
          "type": "string",
          "enum": ["pytest", "jest", "vitest", "mocha", "unittest"]
        },
        "total_tests": {
          "type": "integer",
          "minimum": 0
        },
        "total_files": {
          "type": "integer",
          "minimum": 1
        },
        "total_lines": {
          "type": "integer",
          "minimum": 1
        },
        "estimated_coverage": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Estimated code coverage percentage"
        },
        "tokens_used": {
          "type": "integer",
          "minimum": 0
        },
        "generation_duration_ms": {
          "type": "integer",
          "minimum": 0
        }
      }
    }
  }
}
